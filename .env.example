# Finnhub API key (get one free at https://finnhub.io/)
FINNHUB_API_KEY=your_api_key_here

# Kafka bootstrap servers
# Use localhost:9092 when running Python locally
# Use kafka:29092 when running inside Docker Compose
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# PostgreSQL connection
# Use localhost:5432 when running Python locally
# Use postgres:5432 when running inside Docker Compose
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stockmarket
